@model IEnumerable<SoruCevapPortali.Models.Kullanici>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h1>Kullanıcı Yönetimi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
</p>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kullanici in Model)
                    {
                        <tr>
                            <td>@kullanici.Id</td>
                            <td>@kullanici.KullaniciAdi</td>
                            <td>@kullanici.Email</td>
                            <td>@kullanici.KayitTarihi.ToShortDateString()</td>
                            <td>
                                @* Silme işlemini güvenli yapmak için bir form kullanıyoruz *@
                                <form asp-action="Delete" asp-route-id="@kullanici.Id" method="post" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>